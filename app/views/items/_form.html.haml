= semantic_form_for [@item] do |form|
  
  = form.input :quantidade, :label => 'Quantidade'
  = form.input :produto, :member_label => :nome, :label => 'Produto'
  = form.input :pedido, :member_label => Proc.new { |p| h(p.cliente.nome + " " + p.data + " " + p.hora) } , :label => 'Pedido' 
  = form.submit 'Salvar'

